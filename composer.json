{
    "name": "mahbubhelal/refresh-databases",
    "description": "A package that extends Laravel's RefreshDatabase trait to support multiple database connections. Also provides fast database refreshing.",
    "type": "library",
    "version": "1.0",
    "keywords": [
        "laravel",
        "testing"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Mahbub Helal",
            "email": "mdhelal00@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "orchestra/testbench": "^9.5 || ^10.0",
        "pestphp/pest": "^3.5 || ^4.0",
        "laravel/pint": "^1.18",
        "larastan/larastan": "^3.0",
        "rector/rector": "^2.0",
        "driftingly/rector-laravel": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Mahbub\\RefreshDatabases\\": "src",
            "Database\\Factories\\Mahbub\\RefreshDatabases\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mahbub\\RefreshDatabases\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mahbub\\RefreshDatabases\\RefreshDatabasesServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "coverage": "./dc pest --coverage --bail",
        "format": "./dc pint",
        "refactor": "./dc rector",
        "test": "./dc pest",
        "types": "./dc phpstan --memory-limit=1024M",
        "all": [
            "@refactor",
            "@format",
            "@types",
            "@test --bail"
        ],
        "check": [
            "@refactor --dry-run",
            "@format --test",
            "@types",
            "@coverage --bail --min=100"
        ]
    }
}
