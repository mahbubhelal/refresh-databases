{
    "name": "mahbubhelal/refresh-databases",
    "description": "A Laravel package that extends RefreshDatabase trait to support multiple database connections with separate migration paths. Also provides fast database refreshing with checksum-based caching.",
    "type": "library",
    "keywords": [
        "laravel",
        "testing",
        "database",
        "migrations",
        "refresh-database",
        "multiple-databases",
        "test-database",
        "phpunit",
        "pest"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Mahbub Helal",
            "email": "mdhelal00@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/console": "^11.0 || ^12.0",
        "illuminate/database": "^11.0 || ^12.0",
        "illuminate/support": "^11.0 || ^12.0",
        "symfony/finder": "^7.0",
        "symfony/process": "^7.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.5 || ^10.0",
        "pestphp/pest": "^3.5 || ^4.0",
        "laravel/pint": "^1.18",
        "larastan/larastan": "^3.0",
        "rector/rector": "^2.0",
        "driftingly/rector-laravel": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Mahbub\\RefreshDatabases\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mahbub\\RefreshDatabases\\Tests\\": "tests",
            "Database\\Factories\\Mahbub\\RefreshDatabases\\": "database/factories"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mahbub\\RefreshDatabases\\RefreshDatabasesServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        },
        "sort-packages": true
    },
    "scripts": {
        "coverage": "./dc pest --coverage --bail",
        "format": "./dc pint",
        "refactor": "./dc rector",
        "test": "./dc pest",
        "types": "./dc phpstan --memory-limit=1024M",
        "all": [
            "@refactor",
            "@format",
            "@types",
            "@test --bail"
        ],
        "check": [
            "@refactor --dry-run",
            "@format --test",
            "@types",
            "@coverage --bail --min=100"
        ]
    }
}
