{
    "name": "tcb/fast-refresh-databases",
    "description": "A packge for making test faster by migrating databses only when the migratins are changed",
    "type": "library",
    "version": "1.0",
    "license": "proprietary",
    "authors": [
        {
            "name": "Mahbub Helal",
            "email": "mdhelal00@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "orchestra/testbench": "^9.5",
        "pestphp/pest": "^3.5",
        "laravel/pint": "^1.18",
        "larastan/larastan": "^2.9",
        "rector/rector": "^1.2",
        "driftingly/rector-laravel": "^1.2",
        "phpstan/phpstan-strict-rules": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Tcb\\FastRefreshDatabases\\": "src",
            "Database\\Factories\\Tcb\\FastRefreshDatabases\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tcb\\FastRefreshDatabases\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Tcb\\FastRefreshDatabases\\FastRefreshDatabasesServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ],
        "lint": [
            "@php vendor/bin/pint --ansi",
            "@php vendor/bin/phpstan analyse --verbose --ansi"
        ],
        "test": [
            "./vendor/bin/pint --test",
            "./vendor/bin/pest --coverage --min=100",
            "./vendor/bin/phpstan",
            "./vendor/bin/rector process --dry-run"
        ]
    }
}
